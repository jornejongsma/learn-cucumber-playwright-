{
  "name": "e2e",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "cucumber:dev": "cucumber-js src/features/**/*.feature --tags @dev",
    "cucumber:smoke": "cucumber-js src/features/**/*.feature --tags @smoke",
    "cucumber:regression": "cucumber-js src/features/**/*.feature --tags @regression",
    "transpile": "rimraf dist && babel --extensions .ts --out-dir dist src",
    "precucumber": "rimraf reports && mkdir reports && echo {} > reports/report.json",
    "cucumber": "COMMON_CONFIG_FILE=env/common.env cucumber-js",
    "postcucumber": "COMMON_CONFIG_FILE=env/common.env ts-node ./src/reporter/cucumber-report.ts"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^9.0.0",
    "@playwright/test": "^1.31.1",
    "dotenv": "^16.0.3",
    "playwright": "^1.31.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "cucumber-html-reporter": "^5.5.0"
  }
}
